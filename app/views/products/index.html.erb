<p id="notice"><%= notice %></p>

<h1>Products</h1>


<div class="container-fluid">
  <div class="row">
    <% if @products.count > 0 
    	@products.each do |product| %>
       <%= render product %>
    	<% end %>
    <% else %>
    	<br><b> No Products Found</b> <br>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
