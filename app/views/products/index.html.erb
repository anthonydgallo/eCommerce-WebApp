<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image_url, class: "img-responsive product", height:'250', width:'250') %></td>
      </tr>
      <tr>
        <td><strong><%= product.name %></strong></td>
      </tr>
      <tr>
        <td><%= product.description %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
